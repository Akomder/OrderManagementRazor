@page
@model OrderManagementRazor.Pages.Reports.CustomerPurchasesModel
@{
    ViewData["Title"] = "Customer Purchases Report";
}

<div class="container mt-4">
    <h2 class="mb-4">Customer Purchases Report</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h5>Filter Options</h5>
        </div>
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="CustomerId" class="form-label">Customer</label>
                        <select asp-for="CustomerId" asp-items="Model.Customers" class="form-select">
                            <option value="">-- All Customers --</option>
                        </select>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                    </div>

                    <div class="col-md-3 mb-3">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                    </div>

                    <div class="col-md-2 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Filter
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.CustomerPurchases.Any())
    {
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Customer Purchase Details</h5>
                <button onclick="window.print()" class="btn btn-sm btn-success no-print">
                    <i class="bi bi-printer"></i> Print Report
                </button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Customer Name</th>
                                <th>Email</th>
                                <th>Product Purchased</th>
                                <th class="text-center">Total Qty</th>
                                <th class="text-end">Total Spent</th>
                                <th class="text-center">Purchase Count</th>
                                <th>Last Purchase</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var purchase in Model.CustomerPurchases)
                            {
                                <tr>
                                    <td><strong>@purchase.CustomerName</strong></td>
                                    <td>@purchase.CustomerEmail</td>
                                    <td>@purchase.ProductName</td>
                                    <td class="text-center">@purchase.TotalQuantity</td>
                                    <td class="text-end"><strong>@purchase.TotalSpent.ToString("C")</strong></td>
                                    <td class="text-center">@purchase.PurchaseCount</td>
                                    <td>@purchase.LastPurchaseDate.ToString("MM/dd/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="3" class="text-end">Total:</th>
                                <th class="text-center">@Model.CustomerPurchases.Sum(p => p.TotalQuantity)</th>
                                <th class="text-end">@Model.CustomerPurchases.Sum(p => p.TotalSpent).ToString("C")</th>
                                <th class="text-center">@Model.CustomerPurchases.Sum(p => p.PurchaseCount)</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div class="mt-4">
                    <h5>Summary</h5>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h6>Total Customers</h6>
                                    <h3>@Model.CustomerPurchases.Select(p => p.CustomerId).Distinct().Count()</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h6>Total Products</h6>
                                    <h3>@Model.CustomerPurchases.Select(p => p.ProductId).Distinct().Count()</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h6>Total Quantity</h6>
                                    <h3>@Model.CustomerPurchases.Sum(p => p.TotalQuantity)</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body">
                                    <h6>Total Revenue</h6>
                                    <h3>@Model.CustomerPurchases.Sum(p => p.TotalSpent).ToString("C")</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No purchase data found for the selected filters.
        </div>
    }
</div>

<style>
    @@media print {
        .no-print {
            display: none !important;
        }
        .container {
            max-width: 100% !important;
        }
    }
</style>
