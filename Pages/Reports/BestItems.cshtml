@page
@model OrderManagementRazor.Pages.Reports.BestItemsModel
@{
    ViewData["Title"] = "Best Selling Items Report";
}

<div class="container mt-4">
    <h2 class="mb-4">Best Selling Items Report</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h5>Filter Options</h5>
        </div>
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                    </div>

                    <div class="col-md-3 mb-3">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                    </div>

                    <div class="col-md-3 mb-3">
                        <label asp-for="TopCount" class="form-label">Top Items</label>
                        <select asp-for="TopCount" class="form-select">
                            <option value="5">Top 5</option>
                            <option value="10">Top 10</option>
                            <option value="20">Top 20</option>
                            <option value="50">Top 50</option>
                        </select>
                    </div>

                    <div class="col-md-3 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Apply Filter
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.BestProducts.Any())
    {
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Best Selling Products</h5>
                <button onclick="window.print()" class="btn btn-sm btn-success no-print">
                    <i class="bi bi-printer"></i> Print Report
                </button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th class="text-end">Total Qty Sold</th>
                                <th class="text-end">Total Revenue</th>
                                <th class="text-center">Order Count</th>
                                <th class="text-end">Avg Revenue/Order</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rank = 1;
                            }
                            @foreach (var product in Model.BestProducts)
                            {
                                var avgRevenue = product.OrderCount > 0 ? product.TotalRevenue / product.OrderCount : 0;
                                <tr>
                                    <td><strong>@rank</strong></td>
                                    <td>@product.ProductName</td>
                                    <td><span class="badge bg-secondary">@product.Category</span></td>
                                    <td class="text-end"><strong>@product.TotalQuantitySold</strong></td>
                                    <td class="text-end"><strong>@product.TotalRevenue.ToString("C")</strong></td>
                                    <td class="text-center">@product.OrderCount</td>
                                    <td class="text-end">@avgRevenue.ToString("C")</td>
                                </tr>
                                rank++;
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="3" class="text-end">Total:</th>
                                <th class="text-end">@Model.BestProducts.Sum(p => p.TotalQuantitySold)</th>
                                <th class="text-end">@Model.BestProducts.Sum(p => p.TotalRevenue).ToString("C")</th>
                                <th class="text-center">@Model.BestProducts.Sum(p => p.OrderCount)</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No data found for the selected filters.
        </div>
    }
</div>

<style>
    @@media print {
        .no-print {
            display: none !important;
        }
        .container {
            max-width: 100% !important;
        }
    }
</style>
