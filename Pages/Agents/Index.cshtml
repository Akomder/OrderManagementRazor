@page
@model OrderManagementRazor.Pages.Agents.IndexModel
@{
    ViewData["Title"] = "Agents";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Agents</h2>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Agent
        </a>
    </div>

    @if (Model.Agents.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Agent Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Company</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var agent in Model.Agents)
                    {
                        <tr>
                            <td>@agent.AgentName</td>
                            <td>@agent.Email</td>
                            <td>@agent.Phone</td>
                            <td>@agent.Company</td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@agent.AgentId" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-page="Details" asp-route-id="@agent.AgentId" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-page="Delete" asp-route-id="@agent.AgentId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No agents found. <a asp-page="Create">Add your first agent</a>
        </div>
    }
</div>
