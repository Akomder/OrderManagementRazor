@page
@model OrderManagementRazor.Pages.Agents.DetailsModel
@{
    ViewData["Title"] = "Agent Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Agent Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Agent Name</dt>
                        <dd class="col-sm-9">@Model.Agent.AgentName</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Agent.Email</dd>

                        <dt class="col-sm-3">Phone</dt>
                        <dd class="col-sm-9">@Model.Agent.Phone</dd>

                        <dt class="col-sm-3">Address</dt>
                        <dd class="col-sm-9">@Model.Agent.Address</dd>

                        <dt class="col-sm-3">Company</dt>
                        <dd class="col-sm-9">@Model.Agent.Company</dd>

                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@Model.Agent.CreatedDate.ToString("MM/dd/yyyy HH:mm")</dd>
                    </dl>

                    <div class="d-flex justify-content-between">
                        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                        <div>
                            <a asp-page="Edit" asp-route-id="@Model.Agent.AgentId" class="btn btn-primary">Edit</a>
                            <a asp-page="Delete" asp-route-id="@Model.Agent.AgentId" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
