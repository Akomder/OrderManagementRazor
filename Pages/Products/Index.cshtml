@page
@model OrderManagementRazor.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Products</h2>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Product
        </a>
    </div>

    @if (Model.Products.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Unit Price</th>
                        <th>Stock Quantity</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.Category</td>
                            <td>@product.UnitPrice.ToString("C")</td>
                            <td>
                                <span class="badge @(product.StockQuantity > 10 ? "bg-success" : product.StockQuantity > 0 ? "bg-warning" : "bg-danger")">
                                    @product.StockQuantity
                                </span>
                            </td>
                            <td>@product.CreatedDate.ToString("MM/dd/yyyy")</td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@product.ProductId" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-page="Details" asp-route-id="@product.ProductId" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-page="Delete" asp-route-id="@product.ProductId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No products found. <a asp-page="Create">Add your first product</a>
        </div>
    }
</div>
