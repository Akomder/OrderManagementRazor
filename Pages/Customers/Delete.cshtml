@page
@model OrderManagementRazor.Pages.Customers.DeleteModel
@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3>Delete Customer</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this customer?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Customer Name</dt>
                        <dd class="col-sm-9">@Model.Customer.CustomerName</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Customer.Email</dd>

                        <dt class="col-sm-3">Phone</dt>
                        <dd class="col-sm-9">@Model.Customer.Phone</dd>

                        <dt class="col-sm-3">Address</dt>
                        <dd class="col-sm-9">@Model.Customer.Address</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Customer.CustomerId" />
                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-danger">Delete Customer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
