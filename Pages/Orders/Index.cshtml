@page
@model OrderManagementRazor.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Orders";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Orders</h2>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Order
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Orders.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Order Number</th>
                        <th>Order Date</th>
                        <th>Customer</th>
                        <th>Agent</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td><strong>@order.OrderNumber</strong></td>
                            <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                            <td>@order.Customer?.CustomerName</td>
                            <td>@(order.Agent?.AgentName ?? "N/A")</td>
                            <td>@order.TotalAmount.ToString("C")</td>
                            <td>
                                <span class="badge @(order.Status == "Completed" ? "bg-success" : order.Status == "Pending" ? "bg-warning" : "bg-info")">
                                    @order.Status
                                </span>
                            </td>
                            <td>
                                <a asp-page="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-page="Edit" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-page="Print" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-success" target="_blank">Print</a>
                                <a asp-page="Delete" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No orders found. <a asp-page="Create">Create your first order</a>
        </div>
    }
</div>
