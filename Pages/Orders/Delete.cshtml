@page
@model OrderManagementRazor.Pages.Orders.DeleteModel
@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h3>Delete Order</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this order? This action will also delete all order details and restore product stock quantities.
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-5">Order Number</dt>
                        <dd class="col-sm-7"><strong>@Model.Order.OrderNumber</strong></dd>

                        <dt class="col-sm-5">Order Date</dt>
                        <dd class="col-sm-7">@Model.Order.OrderDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-5">Customer</dt>
                        <dd class="col-sm-7">@Model.Order.Customer?.CustomerName</dd>

                        <dt class="col-sm-5">Agent</dt>
                        <dd class="col-sm-7">@(Model.Order.Agent?.AgentName ?? "N/A")</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-5">Status</dt>
                        <dd class="col-sm-7">
                            <span class="badge @(Model.Order.Status == "Completed" ? "bg-success" : Model.Order.Status == "Pending" ? "bg-warning" : "bg-info")">
                                @Model.Order.Status
                            </span>
                        </dd>

                        <dt class="col-sm-5">Total Amount</dt>
                        <dd class="col-sm-7"><strong>@Model.Order.TotalAmount.ToString("C")</strong></dd>

                        <dt class="col-sm-5">Notes</dt>
                        <dd class="col-sm-7">@Model.Order.Notes</dd>
                    </dl>
                </div>
            </div>

            <h5>Order Items (@Model.Order.OrderDetails.Count items)</h5>
            <div class="table-responsive">
                <table class="table table-sm table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-end">Line Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Order.OrderDetails)
                        {
                            <tr>
                                <td>@item.Product?.ProductName</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">@item.LineTotal.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Order.OrderId" />
                <div class="d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-danger">Delete Order</button>
                </div>
            </form>
        </div>
    </div>
</div>
